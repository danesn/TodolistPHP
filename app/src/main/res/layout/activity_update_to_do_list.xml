<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        tools:context=".Activity.UpdateTodoActivity"
        android:paddingBottom="100dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/addnewtodobackground"
            android:layout_marginBottom="20dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:layout_marginRight="-15dp"
                android:layout_toLeftOf="@id/titleMenuAddNew"
                android:src="@drawable/iconaddnewtodo" />

            <TextView
                android:id="@+id/titleMenuAddNew"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rubikmedium"
                android:layout_centerHorizontal="true"
                android:text="Edit To Do"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_marginTop="55dp"/>


        </RelativeLayout>

        <LinearLayout
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bgitem"
            android:orientation="vertical"
            android:padding="20dp"
            android:paddingTop="40dp">

            <TextView
                android:layout_gravity="center"
                android:text="Edit your To Do"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:fontFamily="@font/rubikmedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:text="Edit title"
                android:textSize="16sp"
                android:textColor="@color/blackChild"
                android:fontFamily="@font/rubikregular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"/>

            <EditText
                android:id="@+id/edtUpdateTitle"
                android:maxLength="30"
                android:lines="1"
                android:hint="What you do?"
                android:textColorHint="#B5B5B5"
                android:textColor="#000C5D"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:padding="12dp"
                android:background="@drawable/bginputtodo"/>

            <TextView
                android:text="Edit describe"
                android:textSize="16sp"
                android:textColor="@color/blackChild"
                android:fontFamily="@font/rubikregular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="20dp"/>

            <EditText
                android:id="@+id/edtUpdateDesc"
                android:hint="What detail you do?"
                android:textColorHint="#B5B5B5"
                android:textColor="#000C5D"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:padding="12dp"
                android:background="@drawable/bginputtodo"/>

            <TextView
                android:text="Edit date"
                android:textSize="16sp"
                android:textColor="@color/blackChild"
                android:fontFamily="@font/rubikregular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="20dp"/>

            <EditText
                android:id="@+id/edtUpdateDate"
                android:maxLength="22"
                android:lines="1"
                android:hint="What date you do?"
                android:textColorHint="#B5B5B5"
                android:textColor="#000C5D"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:padding="12dp"
                android:background="@drawable/bginputtodo"/>

        </LinearLayout>

        <Button
            android:id="@+id/buttonUpdateToDo"
            android:elevation="4dp"
            android:layout_marginTop="20dp"
            android:textAllCaps="false"
            android:fontFamily="@font/rubikmedium"
            android:textSize="18sp"
            android:text="Update task"
            android:textColor="@color/white"
            android:background="@drawable/btnblue"
            android:layout_width="342dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>


    </LinearLayout>

</ScrollView>
